API_TOKEN=supersecrettoken123
DOWNLOAD_DIR=/tmp/videos

# Видео ≤1080p + AAC-аудио
YDL_FORMAT=bestvideo[height<=1080]+bestaudio[ext=m4a]/bestaudio[ext=m4a]
YDL_MERGE_OUTPUT_FORMAT=mp4

# Cookies (нужны, если без них YouTube снова бросит капчу)
YDL_COOKIEFILE=/app/cookies.txt

# HD через android-client (помогает, если tv/web выдаёт DRM)
YDL_EXTRACTOR_ARGS="youtube:player_client=android"

